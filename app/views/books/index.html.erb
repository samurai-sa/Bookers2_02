<div class="container px-5 px-sm-0">
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2 style="color:red"><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li style="color:red"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/profile', users: @users %>
      <div class="mt-3">
        <%= render 'books/form', book: @book %>
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
               <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <a href="/users/<%= book.user.id %>">
                    <%= attachment_image_tag book.user, :profile_image,  size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %>
                  </a>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
                <td id="favorites_buttons_<%= book.id %>">
                  <%= render 'favorites/favorite', book: book %>
                </td>
                <td>コメント数: <%= book.book_comments.count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
