<div class="container">
  <h2>Editing Book</h2>
  <%= render 'layouts/errors', obj: @book %>

  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <p><input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book" /></p>
  <% end %>
  <%= link_to "Show", book_path %> |
  <%= link_to "Back", books_path %>
</div>
